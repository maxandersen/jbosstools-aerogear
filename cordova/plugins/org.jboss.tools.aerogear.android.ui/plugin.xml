<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.debug.ui.launchShortcuts">
      <shortcut
            class="org.jboss.tools.aerogear.android.ui.AndroidLaunchShortcut"
            id="org.jboss.tools.aerogear.android.ui.launch"
            label="Run on Android"
            modes="run">
        <contextualLaunch>
            <enablement>
       
                <with variable="selection">
                    <count value="1"/>
                </with>
            </enablement>
         </contextualLaunch>
      </shortcut>
   </extension>

</plugin>
